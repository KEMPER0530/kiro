{
    "name": "youtube-eafc-player-tests",
    "version": "1.0.0",
    "description": "統合テストとE2Eテスト",
    "scripts": {
        "test": "jest",
        "test:integration": "jest --testPathPattern=integration",
        "test:e2e": "cd e2e && npx playwright test",
        "test:docker": "docker-compose -f docker/docker-compose.test.yml up --build --abort-on-container-exit",
        "test:docker:integration": "docker-compose -f docker/docker-compose.test.yml up --build integration-tests --abort-on-container-exit",
        "test:docker:e2e": "docker-compose -f docker/docker-compose.test.yml up --build e2e-tests --abort-on-container-exit",
        "setup:localstack": "node scripts/setup-localstack.js",
        "cleanup:docker": "docker-compose -f docker/docker-compose.test.yml down -v"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "axios": "^1.6.0",
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testTimeout": 60000,
        "setupFilesAfterEnv": ["<rootDir>/integration/setup.js"],
        "testMatch": [
            "**/integration/**/*.test.js"
        ]
    }
}